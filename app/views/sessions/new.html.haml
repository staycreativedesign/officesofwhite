.row.initial-margin
  .out-line.col-xs-10.col-xs-offset-1.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.border-box
    .row
      .col-md-12.border-bottom
        %h3.header
          Log in
        %h4.tag
          Please enter your email and password
    .row
      .col-md-12.line-box
        %ul.list-unstyled.text-center
          %li
            = label_tag "Email:", nil, class: "text-left"
            = text_field_tag "Email:"
      .col-md-12.line-box
        %ul.list-unstyled.text-center
          %li
            = label_tag "Password:", nil, class: "text-left"
            = password_field_tag "Email:"
    .row
      .col-md-12
        %ul.list-unstyled.list-inline.login
          %li
            = button_tag "Log in"
          %li
            = button_tag "Register New Account"
          %li
            = button_tag "Forgot Password?"
